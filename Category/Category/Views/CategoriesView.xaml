<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Category.Views.CategoriesView"
             BindingContext="{Binding Main,Source={StaticResource Locator}}"
              BackgroundColor="{StaticResource BackgroundColor}"
             Title="Categories">

    <ContentPage.ToolbarItems>
        <ToolbarItem 
            Icon="add"
            Command="{Binding NewCategoryCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout BindingContext="{Binding Categories}" Padding="5">
            <ListView IsRefreshing="{
                Binding IsRefreshing, Mode=TwoWay}" 
                RefreshCommand="{Binding RefreshCommand}" 
                IsPullToRefreshEnabled="True" 
                ItemsSource="{Binding CategoriesList}" 
                HasUnevenRows="true">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>

                                <MenuItem
                                    Command="{Binding EditCommand}"
                                    Text="Edit">
                                </MenuItem>
                                <MenuItem
                                    Command="{Binding DeleteCommand}"
                                    IsDestructive="True"
                                    Text="Delete">
                                </MenuItem>
                            </ViewCell.ContextActions>
                            
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label 
                                    Grid.Column="0"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="Center"
                                    FontSize="Large"
                                     TextColor="{StaticResource FontColor}"
                                    Text="{Binding Description}"/>

                                <Image 
                                    HorizontalOptions="End"
                                    HeightRequest="50"
                                    WidthRequest="50"
                                    Source="derecha">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding SelectCategoryCommand }">
                                            
                                        </TapGestureRecognizer>
                                    </Image.GestureRecognizers>
                                </Image>

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>